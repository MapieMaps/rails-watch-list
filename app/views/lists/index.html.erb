<div class="container">
  <div class="row ">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <h2><%= link_to list.name, list %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="button-add">
  <%= link_to "Add a new list", new_list_path, class: "btn btn-flat"  %>
</div>

