<h1></h1>
<p>Find me in app/views/lists/show.html.erb</p>

<%= link_to "Back to list", lists_path %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/collection/39769052/1600x900);">
  <div class="container">
    <h1><%= "You haven't saved any movies yet!" if @list.movies.empty? %></h1>
    <h1><%= @list.name %></h1><br>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="col-lg-6 mb-4">
        <div class="card">
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= image_tag movie.poster_url, alt: "#{movie.title} picture" %><br>
          <div class="card-body">
            <h3 class="card-title"><%= movie.title %></h3>
            <p><%= movie.overview %></p>
            <p><i><%= bookmark.comment %></i></p>
            <%= link_to 'Remove from the list', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

